<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Pivovara</title>

    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-animate/angular-animate.min.js"></script>
    <script src="~/lib/angular-route/angular-route.min.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="~/lib/stormpath-sdk-angularjs/dist/stormpath-sdk-angularjs.js"></script>
    <script src="~/lib/stormpath-sdk-angularjs/dist/stormpath-sdk-angularjs.tpls.min.js"></script>
    <script src="~/lib/highcharts/highstock.js"></script>
    <script src="~/lib/highcharts/modules/exporting.js"></script>
    <script src="~/lib/highcharts/highcharts-more.js"></script>

    <script src="~/js/site.js"></script>
    <script src="~/js/controllers/indexController.js"></script>
    <script src="~/js/controllers/homepageController.js"></script>
    <script src="~/js/controllers/recipeDetailsController.js"></script>
    <script src="~/js/controllers/loginController.js"></script>
    <script src="~/js/controllers/beerController.js"></script>
    <script src="~/js/controllers/adminController.js"></script>
    <script src="~/js/controllers/recipesController.js"></script>
    <script src="~/js/directives/spinnerDirective.js"></script>
    <script src="~/js/services/spinnerService.js"></script>
    <script src="~/js/controllers/recipeAddEditController.js"></script>
    <script src="~/js/controllers/startBeerController.js"></script>

    @*<script src="~/lib/loading-bar/jquery.loadingbar.min.js"></script>*@
    @*<script src="~/lib/chart.js/dist/Chart.min.js"></script>
    <script src="~/lib/angular-chart.js/angular-chart.js"></script>*@

    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery.countdown/dist/jquery.countdown.min.js"></script>
    <link href="~/lib/flipclock/compiled/flipclock.css" rel="stylesheet" />
    <script src="~/lib/flipclock/compiled/flipclock.min.js"></script>
    <script src="~/lib/signalr/jquery.signalR.min.js"></script>

    <link href="~/css/bootstrapTheme.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body ng-app="BreweryApp">

    <nav class="navbar navbar-default" ng-controller="indexController">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" ui-sref="home">Kućna Craft Pivovara</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a ui-sref="beer">Pive u izradi <span class="sr-only">(current)</span></a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Recepti <span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li ng-repeat="recipe in recipeNames"><a ui-sref="recipeDetails({id:{{recipe.id}}})">{{recipe.name}}</a></li>
                            <li><a ui-sref="allRecipes"><b>Prikaži sve</b></a></li>
                        </ul>
                    </li>
                    <li @*if-user*@><a ui-sref="administrator">Administrator</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li if-user><a ui-sref="administrator">Administrator - {{user.username}}</a></li>
                    <li><a ui-sref="login" if-not-user>Login</a></li>
                    <li><a ui-sref="home" sp-logout if-user>Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container" name="mainContainer">
        <spinner name="MainSpinner" template-name="beerSpinner.html" show="false"></spinner>
        <div ui-view=""></div>
    </div>
</body>
</html>
